<div class="login-session-wrapper">
  <h1 align="center">Log In</h1>
  <div class="login-form">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
        <div class="form-group row">
          <div class="control-label col-md-2 col-md-offset-2">
            <%= f.label :email %>
          </div>
          <div class="col-md-4">
            <%= f.email_field :email, class: "form-control",  placeholder: "Enter email", autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-md-2 col-md-offset-2">
            <%= f.label :password %>
          </div>
          <div class="col-md-4">
            <%= f.password_field :password, class: "form-control",  placeholder: "Enter password", autofocus: true, autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group row">
          <div align="center">
            <%= f.submit 'Log in', class: 'btn btn-primary'%>
          </div>
        </div><br/>
    <% end %>
  </div>
</div>