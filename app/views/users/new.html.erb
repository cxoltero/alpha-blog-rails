<div class="new-user-container">
  <h1>Create a new user</h1>

  <%= render 'shared/errors', obj: @user %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group row">
            <div class="control-label col-md-2">
              <%= f.label :username %>
            </div>
            <div class="col-md-10">
              <%= f.text_field :username, class: "form-control",  placeholder: "Enter username", autofocus: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="control-label col-md-2">
              <%= f.label :email %>
            </div>
            <div class="col-md-10">
              <%= f.email_field :email, rows: 10, class: "form-control",  placeholder: "email", autofocus: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="control-label col-md-2">
              <%= f.label :password %>
            </div>
            <div class="col-md-10">
              <%= f.password_field :password, class: "form-control",  placeholder: "Enter password", autofocus: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
              <%= f.submit "Sign up", class: 'btn btn-primary'%>
            </div>
          </div><br/>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-5">
      [ <%= link_to "Cancel request and go back to home", root_path%> ]
    </div>
  </div>
</div>