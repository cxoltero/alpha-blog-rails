<div class="user-profile">
  <h1>Show page for <%= @user.username %></h1>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 center gravatar">
      <%= gravatar_for(@user) %>
    </div>
  </div>

  <h4 align="center"><%= @user.username %>'s articles</h4>

  <div class="container">
    <%= render './articles/article', obj: @user.articles %>
  </div>
</div>