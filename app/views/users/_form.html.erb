<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
      <div class="control-label col-md-2">
        <%= f.label :username %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :username, class: "form-control",  placeholder: "Enter username", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-10">
        <%= f.email_field :email, rows: 10, class: "form-control",  placeholder: "email", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-10">
        <%= f.password_field :password, class: "form-control",  placeholder: "Enter password", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-2 col-md-offset-2">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: 'btn btn-primary')%>
      </div>
    </div><br/>
<% end %>