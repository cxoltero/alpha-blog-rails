<div class="show-container">
  <h1>Selected Article</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <h3><%= @article.title%></h3>
      <p><%= @article.description %></p>
    </div>
  </div>

  <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary"%>
  <%= link_to "Back", articles_path, class: "btn btn-primary"%>
  <%= link_to "Delete", article_path(@article.id), method: :delete, data: {confirm: "Are you sure you want to delete this article?"},  class: "btn btn-danger"%></button>
</div>
