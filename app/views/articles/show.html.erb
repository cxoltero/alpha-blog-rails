<div class="show-container">
  <h2 align="center"><%= @article.title %></h2>
  <div align="center">Written by: <%= link_to @article.user.username, user_path(@article.user) if @article.user%></div>

  <div class="well col-md-8 col-md-offset-2">
    <h4 class="center custom-description"><strong>Description</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>

    <% if logged_in? && current_user == @article.user%>
      <div class="article-action">
        <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-md btn-primary"%>
        <%= link_to "All Articles", articles_path, class: "btn btn-md btn-success"%>
        <%= link_to "Delete Article", article_path(@article.id), method: :delete,
                    data: {confirm: "Are you sure you want to delete this article?"},
                    class: "btn btn-md btn-danger"%>
      </div>
    <%end %>
  </div>
</div>
